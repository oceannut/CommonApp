<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net">

  <object id="StdSchedulerFactory" type="Quartz.Impl.StdSchedulerFactory, Quartz">
  </object>

  <object id="MockJob" type="ThinkInBio.Scheduling.MockJob, ThinkInBio.Scheduling">
    <property name="Name" value="Mock Job A"/>
    <property name="Logger" ref="GenericLogger"/>
  </object>

  <object id="MockSchedule" type="ThinkInBio.Scheduling.Quartz.QuartzSchedule, ThinkInBio.Scheduling">
    <constructor-arg name="schedulerFactory" ref="StdSchedulerFactory"/>
    <constructor-arg name="cronExpression" value="0/20 * * * * ?"/>
  </object>

  <object id="MockScheduler" type="ThinkInBio.Scheduling.Scheduler, ThinkInBio.Scheduling">
    <constructor-arg name="schedule" ref="MockSchedule"/>
    <constructor-arg name="job" ref="MockJob"/>
    <property name="Name" value="Mock A"/>
    <property name="Description" value="Scheduling for mock."/>
  </object>

  <object id="MockJob2" type="ThinkInBio.Scheduling.MockJob, ThinkInBio.Scheduling">
    <property name="Name" value="Mock Job B"/>
    <property name="Logger" ref="GenericLogger"/>
  </object>

  <object id="MockSchedule2" type="ThinkInBio.Scheduling.Quartz.QuartzSchedule, ThinkInBio.Scheduling">
    <constructor-arg name="schedulerFactory" ref="StdSchedulerFactory"/>
    <constructor-arg name="cronExpression" value="0/30 * * * * ?"/>
  </object>

  <object id="MockScheduler2" type="ThinkInBio.Scheduling.Scheduler, ThinkInBio.Scheduling">
    <constructor-arg name="schedule" ref="MockSchedule2"/>
    <constructor-arg name="job" ref="MockJob2"/>
    <property name="Name" value="Mock B"/>
    <property name="Description" value="Scheduling for mock."/>
  </object>

  <object id="ScheduleManager" type="ThinkInBio.Scheduling.ScheduleManager, ThinkInBio.Scheduling" init-method="Init" destroy-method="Destroy">
    <property name="Map">
      <dictionary key-type="string" value-type="ThinkInBio.Scheduling.Scheduler, ThinkInBio.Scheduling">
        <entry key="Mock" value-ref="MockScheduler" />
        <entry key="Mock2" value-ref="MockScheduler2" />
      </dictionary>
    </property>
  </object>

</objects>
